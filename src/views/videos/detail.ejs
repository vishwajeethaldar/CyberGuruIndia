<%- include('../partials/head', { title }) %>
<%- include('../partials/navbar') %>
<%- include('../partials/alerts') %>

<main class="container py-4" data-video-id="<%= video._id %>">
  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="d-flex align-items-center gap-2 mb-2">
        <h1 class="h3 mb-0"><%= video.title %></h1>
        <button
          class="btn btn-outline-primary btn-sm js-copy-share"
          type="button"
          data-share-url="<%= siteBaseUrl %>/videos/<%= video.slug %>"
          aria-label="Share video"
        >ğŸ”— Share</button>
      </div>
      <p class="text-muted mb-2"><span class="badge text-bg-secondary"><%= video.category.name %></span></p>
      <div class="ratio ratio-16x9 mb-3">
        <iframe src="https://www.youtube.com/embed/<%= video.youtubeId %>" title="<%= video.title %>" allowfullscreen></iframe>
      </div>
      <p><%= video.description %></p>

      <div class="d-flex gap-2 align-items-center mb-4">
        <button class="btn btn-outline-success btn-sm js-video-vote" data-type="like" data-target-id="<%= video._id %>">ğŸ‘ Like (<span class="js-video-likes"><%= video.likes %></span>)</button>
        <button class="btn btn-outline-danger btn-sm js-video-vote" data-type="dislike" data-target-id="<%= video._id %>">ğŸ‘ Dislike (<span class="js-video-dislikes"><%= video.dislikes %></span>)</button>
      </div>

      <section>
        <h2 class="h4">Discussion</h2>
        <% if (video.discussionEnabled) { %>
          <form action="/videos/<%= video.slug %>/comments" method="POST" class="card card-body mb-4">
            <div class="mb-2">
              <label class="form-label">Name</label>
              <input class="form-control" type="text" name="authorName" required maxlength="80" />
            </div>
            <div class="mb-2">
              <label class="form-label">Message</label>
              <textarea class="form-control" name="message" rows="3" required maxlength="1000"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Post Comment</button>
          </form>
        <% } else { %>
          <div class="alert alert-warning">Discussion is disabled for this video.</div>
        <% } %>

        <% if (commentsTree.length) { %>
          <div class="vstack gap-3">
            <% commentsTree.forEach((comment) => { %>
              <div class="card card-body">
                <div class="d-flex justify-content-between mb-1">
                  <strong><%= comment.authorName %></strong>
                  <small class="text-muted"><%= new Date(comment.createdAt).toLocaleString() %></small>
                </div>
                <p class="mb-2"><%= comment.message %></p>
                <div class="d-flex gap-2 mb-2">
                  <button class="btn btn-outline-success btn-sm js-comment-vote" data-type="like" data-target-id="<%= comment._id %>">ğŸ‘ (<span class="count-like"><%= comment.likes %></span>)</button>
                  <button class="btn btn-outline-danger btn-sm js-comment-vote" data-type="dislike" data-target-id="<%= comment._id %>">ğŸ‘ (<span class="count-dislike"><%= comment.dislikes %></span>)</button>
                </div>

                <% if (video.discussionEnabled) { %>
                  <form action="/videos/<%= video.slug %>/comments" method="POST" class="border rounded p-2 mb-2">
                    <input type="hidden" name="parentCommentId" value="<%= comment._id %>" />
                    <div class="row g-2">
                      <div class="col-md-4"><input class="form-control form-control-sm" type="text" name="authorName" placeholder="Your name" required /></div>
                      <div class="col-md-6"><input class="form-control form-control-sm" type="text" name="message" placeholder="Reply..." required /></div>
                      <div class="col-md-2 d-grid"><button class="btn btn-sm btn-primary" type="submit">Reply</button></div>
                    </div>
                  </form>
                <% } %>

                <% if (comment.replies && comment.replies.length) { %>
                  <div class="ms-3 mt-2 border-start ps-3 vstack gap-2">
                    <% comment.replies.forEach((reply) => { %>
                      <div>
                        <div class="d-flex justify-content-between"><strong><%= reply.authorName %></strong><small class="text-muted"><%= new Date(reply.createdAt).toLocaleString() %></small></div>
                        <p class="mb-1"><%= reply.message %></p>
                        <div class="d-flex gap-2">
                          <button class="btn btn-outline-success btn-sm js-comment-vote" data-type="like" data-target-id="<%= reply._id %>">ğŸ‘ (<span class="count-like"><%= reply.likes %></span>)</button>
                          <button class="btn btn-outline-danger btn-sm js-comment-vote" data-type="dislike" data-target-id="<%= reply._id %>">ğŸ‘ (<span class="count-dislike"><%= reply.dislikes %></span>)</button>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                <% } %>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-muted">No approved comments yet.</p>
        <% } %>
      </section>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
